{
  "name": "react-ssr-prepass",
  "version": "1.0.0",
  "description": "A custom partial React SSR renderer for prefetching and suspense",
  "main": "index.js",
  "source": "src/index.js",
  "author": "Phil Pl√ºckthun <phil@kitten.sh>",
  "license": "MIT",
  "files": [
    "index.js",
    "dist"
  ],
  "scripts": {
    "build:prod": "microbundle --target node -f cjs --compress --globals '__DEV__=false' -o dist/react-ssr-prepass.production.min.js",
    "build:dev": "microbundle --target node -f cjs --no-compress --globals '__DEV__=false' -o dist/react-ssr-prepass.development.js",
    "build": "run-p build:prod build:dev",
    "flow": "flow"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{js}": [
      "flow focus-check",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "peerDependencies": {
    "react": "^16.6.0",
    "react-is": "^16.6.0"
  },
  "devDependencies": {
    "flow-bin": "^0.94.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "microbundle": "^0.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-is": "^16.8.4"
  },
  "dependencies": {
    "invariant": "^2.2.4",
    "object-is": "^1.0.1"
  }
}
